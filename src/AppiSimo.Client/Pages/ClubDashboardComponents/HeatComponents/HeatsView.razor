@inherits HeatsComponent

@if (ViewModel == null)
{
    <span>Loading ...</span>
    return;
}

<div class="d-flex justify-content-end mb-2">
    <button class="btn btn-outline-primary w-10" @onclick="GoToCreate">Crea</button>
</div>

<div class="d-flex justify-content-end mb-2">

    <CascadingValue Value="@ViewModel" Name="Value">

        <TableTemplate TItem="HeatViewModel" Context="heat">
    
            <TableHeader>
    
                <th>Tipo</th>
                <th>Prezzo</th>
                <th>
                    <span class="oi oi-circle-check"></span>
                </th>
                <th></th>
    
            </TableHeader>
    
            <RowTemplate>
    
                <td>@heat.Type</td>
                <td>@heat.Price</td>
                <td>
                    <span class="@($"oi {(heat.Enabled ? "oi-check" : string.Empty)}")"></span>
                </td>
    
                <td class="pointer align-middle" @onclick="() => GoToEdit(heat.Id)">
                    <span class="oi oi-external-link"></span>
                </td>
    
            </RowTemplate>
    
        </TableTemplate>

    </CascadingValue>

</div>